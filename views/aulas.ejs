<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Materias/Talleres</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <a href="/IES_9-024/materias" class="btn btn-primary mb-3">
        Ir a Materias/Talleres
      </a>
    <h2>Listado de Aulas</h2>
    <div class="table-responsive mt-4">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID Aula</th>
            <th>Aula</th>
            <th>Capacidad</th>
            <th>Estado</th>
            <th>Acciones</th>
            <!-- Agrega más columnas si lo necesitas -->
          </tr>
        </thead>
        <tbody>
          <% if (aulas && aulas.length > 0) { %>
            <% aulas.forEach(function(a) { %>
              <tr>
                <td><%= a.idaula %></td>
                <td><%= a.nombreAula %></td>
                <td><%= a.capacidad %></td>
                <td><%= a.habilitada == 1 ? 'Sí' : 'No' %></td>
                <td>
                  <a href="#"
                    class="btn btn-warning btn-sm editar-aula"
                    data-id="<%= a.idaula %>"
                    data-nombre="<%= a.nombreAula %>"
                    data-capacidad="<%= a.capacidad %>"
                    data-habilitado="<%= a.habilitada %>">
                    Editar
                  </a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center">No hay aulas registradas.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <!-- Modal Editar Aula -->
    <div class="modal fade" id="modalEditarAula" tabindex="-1" aria-labelledby="modalEditarAulaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formEditarAula">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="modalEditarAulaLabel">Editar Aula</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
            <input type="hidden" id="editIdAula" name="idaula">
            <div class="mb-3">
                <label for="editNombreAula" class="form-label">Aula</label>
                <input type="text" class="form-control" id="editNombreAula" name="nombreAula" required>
            </div>
            <div class="mb-3">
                <label for="editCapacidad" class="form-label">Capacidad</label>
                <input type="number" class="form-control" id="editCapacidad" name="capacidad" min="1" required>
            </div>
            <div class="mb-3">
                <label for="editHabilitada" class="form-label">Estado</label>
                <select class="form-select" id="editHabilitada" name="habilitada">
                <option value="1">Habilitado</option>
                <option value="0">Deshabilitado</option>
                </select>
            </div>
            </div>
            <div class="modal-footer">
            <button type="submit" class="btn btn-success">Guardar cambios</button>
            </div>
        </div>
        </form>
    </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.querySelectorAll('.editar-aula').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      document.getElementById('editIdAula').value = this.getAttribute('data-id');
      document.getElementById('editNombreAula').value = this.getAttribute('data-nombre');
      document.getElementById('editCapacidad').value = this.getAttribute('data-capacidad');
      document.getElementById('editHabilitada').value = this.getAttribute('data-habilitada');
      var modal = new bootstrap.Modal(document.getElementById('modalEditarAula'));
      modal.show();
    });
  });

  document.getElementById('formEditarAula').addEventListener('submit', async function(e) {
    e.preventDefault();
    const idaula = document.getElementById('editIdAula').value;
    const nombreAula = document.getElementById('editNombreAula').value;
    const capacidad = document.getElementById('editCapacidad').value;
    const habilitada = document.getElementById('editHabilitada').value;

    try {
      const res = await fetch('/IES_9-024/aulas/update', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ idaula, nombreAula, capacidad, habilitada })
      });
      const data = await res.json();
      if (res.ok && data.ok) {
        location.reload();
      } else {
        alert('No se pudo actualizar.');
      }
    } catch (e) {
      alert('Error de conexión.');
    }
  });
</script>
</body>
</html>