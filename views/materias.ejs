    <!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Materias</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <a href="/IES_9-024/formacion-continua" class="btn btn-primary mb-3">
        Ir a Inscripcion
    </a>
    <a href="/IES_9-024/aulas" class="btn btn-primary mb-3">
        Ir a Aulas
    </a>
    <h2>Listado de Materias</h2>
    <div class="table-responsive mt-4">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID Materia</th>
            <th>Materia</th>
            <th>ID Facultad</th>
            <th>Estado</th>
            <th>Aula</th>
            <th>Capacidad</th>
            <th>Acciones</th>
            <!-- Agrega más columnas si lo necesitas -->
          </tr>
        </thead>
        <tbody>
          <% if (materias && materias.length > 0) { %>
            <% materias.forEach(function(m) { %>
              <tr>
                <td><%= m.idmateria %></td>
                <td><%= m.materia %></td>
                <td><%= m.facultad_idfacultad %></td>
                <td><%= m.habilitado == 1 ? 'Sí' : 'No' %></td>
                <td><%= m.nombreAula %></td>
                <td><%= m.capacidad %></td>
                <td>
                  <a href="#"
                    class="btn btn-warning btn-sm editar-materia"
                    data-id="<%= m.idmateria %>"
                    data-materia="<%= m.materia %>"
                    data-facultad="<%= m.facultad_idfacultad %>"
                    data-habilitado="<%= m.habilitado %>"
                    data-aula="<%= m.aula_idaula %>">
                    Editar
                    </a>                  
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">No hay materias registradas.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- Modal Editar Materia -->
<div class="modal fade" id="modalEditarMateria" tabindex="-1" aria-labelledby="modalEditarMateriaLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="formEditarMateria">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEditarMateriaLabel">Editar Materia</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="editIdMateria" name="idmateria">
          <div class="mb-3">
            <label for="editMateria" class="form-label">Materia</label>
            <input type="text" class="form-control" id="editMateria" name="materia" required>
          </div>
          <div class="mb-3">
            <label for="editHabilitado" class="form-label">Estado</label>
            <select class="form-select" id="editHabilitado" name="habilitado">
              <option value="1">Habilitado</option>
              <option value="0">Deshabilitado</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="editAula" class="form-label">Aula</label>
            <select class="form-select" id="editAula" name="aula_idaula" required>
              <% aulas.forEach(function(a) { %>
                <option value="<%= a.idaula %>"><%= a.nombreAula %> (Capacidad: <%= a.capacidad %>)</option>
              <% }); %>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Guardar cambios</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script>
  document.querySelectorAll('.editar-materia').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      document.getElementById('editIdMateria').value = this.getAttribute('data-id');
      document.getElementById('editMateria').value = this.getAttribute('data-materia');
      document.getElementById('editHabilitado').value = this.getAttribute('data-habilitado');
      document.getElementById('editAula').value = this.getAttribute('data-aula');
      var modal = new bootstrap.Modal(document.getElementById('modalEditarMateria'));
      modal.show();
    });
  });

  document.getElementById('formEditarMateria').addEventListener('submit', async function(e) {
    e.preventDefault();
    const idmateria = document.getElementById('editIdMateria').value;
    const materia = document.getElementById('editMateria').value;
    const habilitado = document.getElementById('editHabilitado').value;
    const aula_idaula = document.getElementById('editAula').value;

    try {
      const res = await fetch('/IES_9-024/materias/update', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ idmateria, materia, habilitado, aula_idaula })
      });
      const data = await res.json();
      if (res.ok && data.ok) {
        location.reload();
      } else {
        alert('No se pudo actualizar.');
      }
    } catch (e) {
      alert('Error de conexión.');
    }
  });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>