<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Deudas Cooperadora</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    
  <div class="container mt-5">
    <h2>Listado de Deudas Cooperadora</h2>
    <div class="container mt-4">
        <a href="/IES_9-024/cooperadora" class="btn btn-outline-primary mb-3">
        Volver a Recibos
        </a>
    </div>
    <div class="mb-3">
        <label for="filtroHabilitado" class="form-label"><strong>Filtrar por estado:</strong></label>
        <select id="filtroHabilitado" class="form-select" style="max-width: 300px;">
            <option value="todos">Todos</option>
            <option value="habilitados">Habilitados</option>
            <option value="rechazados">Rechazados</option>
        </select>
    </div>
    <div class="table-responsive mt-4">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>N°</th>
            <th>ID FormaPago</th>
            <th>Apellido</th>
            <th>Cuota Final</th>
            <th>Detalle</th>
            <th>Habilitado</th>
            <th>Acciones</th>
            <!-- Agrega más columnas si lo necesitas -->
          </tr>
        </thead>
        <tbody>
          <% if (formapagos && formapagos.length > 0) { %>
            <% formapagos.forEach(function(fp, i) { %>
              <tr data-habilitado="<%= fp.habilitado %>">
                <td><%= i + 1 %></td>
                <td><%= fp.idformapago %></td>
                <td><%= fp.apellido %></td>
                <td><%= fp.cuotaFinal %></td>
                <td><%= fp.idInscripcion %></td>
                <td><%= fp.habilitado == 1 ? 'Sí' : 'No' %></td>
                <td>
                <button class="btn btn-danger btn-sm eliminar-formapago" data-id="<%= fp.idformapago %>">
                    Eliminar
                </button>
                <button class="btn btn-success btn-sm habilitar-formapago" data-id="<%= fp.idformapago %>">
                Habilitar
                </button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center">No hay registros.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- Modal Editar Detalle -->
<div class="modal fade" id="modalEditarDetalle" tabindex="-1" aria-labelledby="modalEditarDetalleLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="formEditarDetalle">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEditarDetalleLabel">Editar Detalle</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="editIdFormapago" name="idformapago">
          <div class="mb-3">
            <label for="editDetalle" class="form-label">Detalle (ID Inscripción)</label>
            <input type="text" class="form-control" id="editDetalle" name="detalle" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Actualizar</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
  document.querySelectorAll('.eliminar-formapago').forEach(function(btn) {
    btn.addEventListener('click', async function() {
      if (!confirm('¿Seguro que desea eliminar esta deuda?')) return;
      const id = this.getAttribute('data-id');
      try {
        const res = await fetch('/IES_9-024/cooperadora/deudores/eliminar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ idformapago: id })
        });
        const data = await res.json();
        if (res.ok && data.ok) {
          location.reload(); // Recarga la tabla (la página)
        } else {
          alert('No se pudo eliminar.');
        }
      } catch (e) {
        alert('Error de conexión.');
      }
    });
  });

  document.querySelectorAll('.habilitar-formapago').forEach(function(btn) {
  btn.addEventListener('click', function() {
    const id = this.getAttribute('data-id');
    // Busca el valor actual del detalle en la fila
    const tr = this.closest('tr');
    const detalle = tr.querySelector('td:nth-child(5)').textContent.trim();

    document.getElementById('editIdFormapago').value = id;
    document.getElementById('editDetalle').value = detalle;

    var modal = new bootstrap.Modal(document.getElementById('modalEditarDetalle'));
    modal.show();
  });
});

// Maneja el submit del modal
document.getElementById('formEditarDetalle').addEventListener('submit', async function(e) {
  e.preventDefault();
  const idformapago = document.getElementById('editIdFormapago').value;
  const detalle = document.getElementById('editDetalle').value;
  try {
    const res = await fetch('/IES_9-024/cooperadora/deudores/actualizar', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ idformapago, detalle })
    });
    const data = await res.json();
    if (res.ok && data.ok) {
      location.reload();
    } else {
      alert('No se pudo actualizar.');
    }
  } catch (e) {
    alert('Error de conexión.');
  }
});

  document.getElementById('filtroHabilitado').addEventListener('change', function() {
    const filtro = this.value;
    document.querySelectorAll('tbody tr').forEach(function(tr) {
      const habilitado = tr.getAttribute('data-habilitado');
      let mostrar = true;
      if (filtro === 'habilitados') {
        mostrar = (habilitado === '1');
      } else if (filtro === 'rechazados') {
        mostrar = (habilitado === '0');
      }
      tr.style.display = (filtro === 'todos' || mostrar) ? '' : 'none';
    });

    // Renumerar los números de orden después de filtrar
    let contador = 1;
    document.querySelectorAll('tbody tr').forEach(function(tr) {
      if (tr.style.display !== 'none') {
        tr.querySelector('td').textContent = contador++;
      }
    });

  });
  
</script>
</body>
</html>