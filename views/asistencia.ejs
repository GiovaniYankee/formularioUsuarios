<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Asistencia</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2 class="mb-4">Registro de Asistencia</h2>
    <a href="/IES_9-024/asistencia/lector" class="btn btn-primary mb-3">Abrir Lector QR</a>
    <a href="/IES_9-024/formacion-continua" class="btn btn-primary mb-3">inscripciones</a>
    <form id="filtro-form" method="get" style="margin-bottom: 16px;">
      <label for="filtro-materia"><b>Filtrar por materia:</b></label>
      <select id="filtro-materia" name="materia" style="padding:6px; border-radius:6px;">
        <option value="todas" <%= materiaSeleccionada === 'todas' ? 'selected' : '' %>>Todas</option>
        <% if (materias && materias.length > 0) { %>
          <% materias.forEach(function(m) { %>
            <option value="<%= m.idmateria %>" <%= materiaSeleccionada == m.idmateria ? 'selected' : '' %>><%= m.materia %></option>
          <% }); %>
        <% } %>
      </select>
      <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
    </form>

    <div class="table-responsive">
      <table id="tabla-asistencias" class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>N°</th>
            <th>DNI</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Asistencia</th>
            <th>Inscripción</th>
            <th>A1</th>
            <th>AT</th>
            <th>AE</th>
            <th>Nt 1</th>
            <th>QR</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (asistencias && asistencias.length > 0) { %>
            <% asistencias.forEach(function(a, i) { %>
              <tr>
                <% 
                  let curr = a.curricula;
                  if (typeof curr === 'string') {
                    try { curr = JSON.parse(curr); } catch { curr = {}; }
                  }
                %>
                <td><%= i + 1 %></td>
                <td><%= a.numDocumento %></td>
                <!-- Solo la fecha (sin hora) -->
                <td><%= a.fechaRegistro ? a.fechaRegistro.toISOString ? a.fechaRegistro.toISOString().slice(0,10) : a.fechaRegistro.slice(0,10) : '' %></td>
                <td><%= a.horaRegistro %></td>
                <td><%= a.apellido %></td>
                <td><%= a.nombre %></td>
                <td><%= a.correo %></td>
                <td><%= a.telefono %></td>
                <td><%= a.asistencia === 'A' ? 'Procesando' : a.asistencia === 'T' ? 'Terminado' : 'No Asistió' %></td>
                <td><%= a.inscripcion_idinscripcion %></td>
                <td><%= curr.A1 || '' %></td>
                <td><%= curr.AT || '' %></td>
                <td><%= curr.AE || '' %></td>
                <td><%= curr.noti1 === 'ok' ? 'Sí' : 'No' %></td>
                <!-- Mostrar imagen QR si existe -->
                <td>
                  <% if (curr.QR) { %>
                    <img src="<%= curr.QR %>" alt="QR" style="width:60px;height:60px;">
                  <% } %>
                </td>
                <td>
                  <a href="/asistencia/editar/<%= a.idregistroAsisten %>" class="btn btn-warning btn-sm">Editar</a>
                  <form action="/asistencia/eliminar/<%= a.idregistroAsisten %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="16" class="text-center">No hay registros de asistencia.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div style="margin-bottom: 16px;">
      <button class="btn btn-success" onclick="imprimirTabla()">Imprimir</button>
      <button class="btn btn-primary" onclick="exportarExcel()">Exportar a Excel</button>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function exportarExcel() {
      const tabla = document.getElementById('tabla-asistencias');
      let html = tabla.outerHTML.replace(/ /g, '%20');
      const a = document.createElement('a');
      a.href = 'data:application/vnd.ms-excel,' + html;
      a.download = 'asistencias.xls';
      a.click();
    }

    function imprimirTabla() {
      const tabla = document.getElementById('tabla-asistencias');
      const ventana = window.open('', '', 'height=600,width=900');
      ventana.document.write('<html><head><title>Imprimir Asistencias</title>');
      ventana.document.write('</head><body >');
      ventana.document.write(tabla.outerHTML);
      ventana.document.write('</body></html>');
      ventana.document.close();
      ventana.print();
    }
  </script>
</body>
</html>
